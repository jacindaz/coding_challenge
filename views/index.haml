%h3
  %a{ href: '/' } PLM Coding Challenge
%hr

- if session.any?
  %br
  %p
    = session[:message]
  %br

%form{ action: "/send_text", method: 'post'}
  %div
    %label{ name: 'text_body'} Text message
    %input{ type: 'text', name: 'text_body', id: 'text_body' }
  %div
    %label{ name: 'image_search'} Image search terms
    %input{ type: 'text', name: 'image_search', id: 'image_search' }
  %div
    %label{ name: 'text_number'} Number to text
    %input{type: 'text', name: 'text_number', id: 'text_number'}
  %input{ type: 'submit', value: 'Submit' }
